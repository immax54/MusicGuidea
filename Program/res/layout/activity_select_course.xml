<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDEFC"
    tools:context=".LVL_S">

    <Button
        android:id="@+id/btnNov"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFDEFC"
        android:fontFamily="sans-serif-light"
        android:text="Курс 1"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:visibility="visible"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/SLyb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SLyb"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFDEFC"
        android:fontFamily="sans-serif-light"
        android:text="Курс 2"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/SLyb2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNov" />

    <Button
        android:id="@+id/SLyb2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="110dp"
        android:backgroundTint="#FFDEFC"
        android:fontFamily="sans-serif-light"
        android:text="Курс 3"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SLyb" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="182dp"
        android:text="Уровень: x"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_AB"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginBottom="357dp"
        android:backgroundTint="#FFDEFC"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>