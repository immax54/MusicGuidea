<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDEFC"
    tools:context=".sin_lesson4">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="560dp"
        android:layout_height="287dp"
        android:translationX="110dp"
        app:autoPlay="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:videoId="maOmMU8WYBc" />
    <ImageButton
        android:id="@+id/btn_AB"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginBottom="359dp"
        android:backgroundTint="#FFDEFC"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <Button
        android:id="@+id/btn_Next"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFDEFC"
        android:fontFamily="sans-serif-light"
        android:text="Далее"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="420dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:text="1. Урок рассчитан на тех людей, которые хотели бы научиться играть на синтезаторе."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>